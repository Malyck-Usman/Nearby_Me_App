<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"

    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">
<!--            android:background="@drawable/bg_item_cardview"-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center_horizontal|center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S.No"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_home_sno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>


<LinearLayout

    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="4.5"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"

    >
    <TextView
        android:id="@+id/tv_home_rent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Price"
        android:textSize="22sp"

        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/tv_home_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""


   />
</LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/secondary">


    </LinearLayout>
            <LinearLayout

    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
                android:gravity="center_vertical"

    >
    <TextView
        android:id="@+id/tv_home_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2 bedrooms"
        android:layout_marginTop="5dp"

        /> <TextView
        android:id="@+id/tv_home_rooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2 bedrooms"


        />
    <TextView
        android:id="@+id/tv_home_bathroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rooms :"


      />


</LinearLayout>





        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/on_secondary_light_two"/>



</androidx.cardview.widget.CardView>