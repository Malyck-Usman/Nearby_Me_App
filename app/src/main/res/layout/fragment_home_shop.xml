<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_home_shop"
    android:background="@color/colorPrimary">

    <SeekBar
        android:id="@+id/sb_radius"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_widgets"
        app:layout_constraintStart_toEndOf="@+id/btn_find_location"
        app:layout_constraintEnd_toStartOf="@+id/edt_radius"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"/>


    <EditText
        android:id="@+id/edt_radius"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_widgets"
        android:hint="Radius"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@color/app_yellowish"
        android:textSize="16sp"
        android:textColorHint="@color/app_yellowish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"/>


    <ImageButton
        android:id="@+id/btn_find_location"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_widgets"
        android:src="@drawable/icon_gps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/bg_widgets"
        android:text="Search"
        android:textColor="@color/app_yellowish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sb_radius"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_search" />



    <FrameLayout
        android:id="@+id/container_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" >


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>