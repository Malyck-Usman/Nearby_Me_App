<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_add_announcement"
    android:background="@drawable/bg_add_announcement">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/fragment_add_layout_margin"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <Button
                    android:id="@+id/btn_ann_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_get_location_btn"
                    android:drawableEnd="@drawable/icon_gps"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Click to get Location"
                    android:textColor="@color/secondary" />


            </androidx.cardview.widget.CardView>


            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/edt_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Subject *"
                app:counterEnabled="true"
                app:counterMaxLength="40"
                android:layout_marginTop="120dp"
                app:errorEnabled="true"
                app:errorTextColor="@color/app_red">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:inputType="text"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/edt_announcement_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description *"
                app:counterEnabled="true"
                app:errorEnabled="true"
                android:layout_marginTop="40dp"
                app:errorTextColor="@color/app_red">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:inputType="textMultiLine"
                     />
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btn_save_announcement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_button"
                android:text="save"
                android:textColor="@color/secondary"
                android:textStyle="bold" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>